{% extends "ElaoFormBundle:Form:form_elao_layout.html.twig" %}

{% block form_start %}
	{% set form_class = form_class|default(horizontal|default(false) ? 'form-horizontal' : inline|default(false) ? 'form-inline' : 'form') %}
    {{ parent() }}
{% endblock form_start %}

{% block form_help %}
	{% set help_class = help_class|default('help-block') %}
	{{ parent() }}
{% endblock %}

{% block group_attributes %}
{% spaceless %}
	{% set group_attr = group_attr|default({}) %}
	{% set group_class = group_class|default('form-group') %}
	{% set group_error_class = group_error_class|default('has-error') %}
	{{ parent() }}
{% endspaceless %}
{% endblock group_attributes %}

{% block form_widget %}
{% spaceless %}
    {% if not compound or expanded|default(true) is sameas(false) %}
		{% set control_class = control_class|default('form-control') %}
	    {% set attr = attr|merge({'class': (attr.class|default('') ~ ' ' ~ control_class)|trim }) %}
    {% endif %}
	{{ parent() }}
{% endspaceless %}
{% endblock form_widget %}

{% block form_widget_simple %}
{% spaceless %}
	{% set control_class = control_class|default('form-control') %}
    {% set attr = attr|merge({'class': (attr.class|default('') ~ ' ' ~ control_class)|trim }) %}
	{{ parent() }}
{% endspaceless %}
{% endblock form_widget_simple %}

{% block textarea_widget %}
{% spaceless %}
	{% set control_class = control_class|default('form-control') %}
    {% set attr = attr|merge({'class': (attr.class|default('') ~ ' ' ~ control_class)|trim }) %}
	{{ parent() }}
{% endspaceless %}
{% endblock textarea_widget %}

{% block choice_widget_collapsed %}
{% spaceless %}
	{% set control_class = control_class|default('form-control') %}
    {% set attr = attr|merge({'class': (attr.class|default('') ~ ' ' ~ control_class)|trim }) %}
	{{ parent() }}
{% endspaceless %}
{% endblock choice_widget_collapsed %}