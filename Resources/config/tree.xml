<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="elao.form.tree_builder.class">Elao\Bundle\FormBundle\Service\FormTreeBuilder</parameter>
        <parameter key="elao.form.key_builder.class">Elao\Bundle\FormBundle\Service\FormKeyBuilder</parameter>

        <parameter key="elao.form.extension.tree.form_type_extension.class">Elao\Bundle\FormBundle\Form\Extension\Tree\FormTypeExtension</parameter>
        <parameter key="elao.form.extension.tree.collection_type_extension.class">Elao\Bundle\FormBundle\Form\Extension\Tree\CollectionTypeExtension</parameter>
        <parameter key="elao.form.extension.tree.button_type_extension.class">Elao\Bundle\FormBundle\Form\Extension\Tree\ButtonTypeExtension</parameter>
        <parameter key="elao.form.extension.tree.choice_type_extension.class">Elao\Bundle\FormBundle\Form\Extension\Tree\ChoiceTypeExtension</parameter>
    </parameters>

    <services>
        <!-- Services -->

        <service id="elao.form.tree_builder" class="%elao.form.tree_builder.class%" />
        <service id="elao.form.key_builder" class="%elao.form.key_builder.class%" />

        <!-- Form Extension -->

        <service id="elao.form.extension.tree.tree_aware_extension" abstract="true" />

        <service id="elao.form.extension.tree.form_type_extension" class="%elao.form.extension.tree.form_type_extension.class%" parent="elao.form.extension.tree.tree_aware_extension">
            <tag name="form.type_extension" alias="form" />
        </service>

        <service id="elao.form.extension.tree.collection_type_extension" class="%elao.form.extension.tree.collection_type_extension.class%" parent="elao.form.extension.tree.tree_aware_extension">
            <tag name="form.type_extension" alias="collection" />
        </service>

        <service id="elao.form.extension.tree.button_type_extension" class="%elao.form.extension.tree.button_type_extension.class%" parent="elao.form.extension.tree.tree_aware_extension">
            <tag name="form.type_extension" alias="button" />
        </service>

        <service id="elao.form.extension.tree.choice_type_extension" class="%elao.form.extension.tree.choice_type_extension.class%" parent="elao.form.extension.tree.tree_aware_extension">
            <tag name="form.type_extension" alias="choice" />
        </service>
    </services>
</container>
