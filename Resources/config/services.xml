<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="elao.form.tree_builder.class">Elao\Bundle\FormBundle\Service\FormTreeBuilder</parameter>
        <parameter key="elao.form.extension.form_type_extension.class">Elao\Bundle\FormBundle\Form\Extension\FormTypeExtension</parameter>
    </parameters>

    <services>
        <!-- Service -->
        <service id="elao.form.tree_builder" class="%elao.form.tree_builder.class%" />

        <!-- Form Extension -->
        <service id="elao.form.extension.form_type_extension" class="%elao.form.extension.form_type_extension.class%">
            <argument type="service" id="elao.form.tree_builder" on-invalid="ignore" />
            <tag name="form.type_extension" alias="form" />
        </service>
    </services>
</container>
