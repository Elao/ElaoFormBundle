<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="elao.form.extension.form_button_type_extension.class">Elao\Bundle\FormBundle\Form\Extension\FormButtonTypeExtension</parameter>
        <parameter key="elao.form.extension.form_type_extension.class">Elao\Bundle\FormBundle\Form\Extension\FormTypeExtension</parameter>
        <parameter key="elao.form.extension.collection_type_extension.class">Elao\Bundle\FormBundle\Form\Extension\CollectionTypeExtension</parameter>
        <parameter key="elao.form.extension.button_type_extension.class">Elao\Bundle\FormBundle\Form\Extension\ButtonTypeExtension</parameter>
        <parameter key="elao.form.extension.choice_type_extension.class">Elao\Bundle\FormBundle\Form\Extension\ChoiceTypeExtension</parameter>
    </parameters>

    <services>
        <!-- Form Extension -->

        <service id="elao.form.extension.form_button_type_extension" class="%elao.form.extension.form_button_type_extension.class%">
            <tag name="form.type_extension" alias="form" />
        </service>

        <!-- Tree Aware Extension -->

        <service id="elao.form.extension.tree_aware_extension" abstract="true" />

        <service id="elao.form.extension.form_type_extension" class="%elao.form.extension.form_type_extension.class%" parent="elao.form.extension.tree_aware_extension">
            <tag name="form.type_extension" alias="form" />
        </service>

        <service id="elao.form.extension.collection_type_extension" class="%elao.form.extension.collection_type_extension.class%" parent="elao.form.extension.tree_aware_extension">
            <tag name="form.type_extension" alias="collection" />
        </service>

        <service id="elao.form.extension.button_type_extension" class="%elao.form.extension.button_type_extension.class%" parent="elao.form.extension.tree_aware_extension">
            <tag name="form.type_extension" alias="button" />
        </service>

        <service id="elao.form.extension.choice_type_extension" class="%elao.form.extension.choice_type_extension.class%" parent="elao.form.extension.tree_aware_extension">
            <tag name="form.type_extension" alias="choice" />
        </service>
    </services>
</container>
